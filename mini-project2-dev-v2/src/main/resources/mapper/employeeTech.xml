<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.jobara.employee.model.EmployeeTechRepository">

    <select id="findAll" resultType="shop.mtcoding.jobara.employee.model.EmployeeTech">
        select * from employeetech_tb
    </select>

    <select id="findByUserId" resultType="shop.mtcoding.jobara.employee.model.EmployeeTech">
        select * from employeetech_tb where user_id = #{userId}
    </select>

    <select id="findByIdWithSkillForDetail" resultType="Integer">
        SELECT skill FROM employeetech_tb 
        where user_id = #{userId}
    </select>

    <select id="findByIdWithSkillNameForDetail" resultType="String">
        SELECT Skill_name FROM employeetech_tb, skill_tb
        where user_id = #{userId} and employeetech_tb.skill = skill_tb.skill_code
    </select>

    <insert id="insert">
        insert into employeetech_tb (user_id, skill) values(#{userId}, #{skill})
    </insert>

    <insert id="insertSkill">
        insert into employeetech_tb (user_id, skill) 
            VALUES
        <foreach collection="checkLang" item="skill" separator=",">
            (#{employeeId}, #{skill})
        </foreach>
    </insert>     

    <delete id="deleteByUserId">
        delete from employeetech_tb where user_id = #{userId} 
    </delete>    

    <update id="updateByUserId">
        update employeetech_tb 
           set skill = #{skill}
        where user_id = #{userId} 
    </update>

</mapper>